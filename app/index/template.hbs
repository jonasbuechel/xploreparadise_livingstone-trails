{{#l-default}}

  {{modal-video
    classNames = "c-ember-cli-video-modal"
    showVideoModal = showVideoModal  
    videoId = videoId
  }}

  {{#c-video classNames="c-video--fullpage"}}
    {{ember-youtube
      ytid="V2VkGY-DMKE"
      playerVars=youtubeIntroPlayerVars
      showDebug=false
      showControls=false
      showProgress=false
    }}
  {{/c-video}}

  {{c-separator isBig=true isDark=true}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
      <h2>{{model.trail.title}}</h2>
      {{c-separator}}
      <p>{{model.trail.p1}}</p>
      <p>{{model.trail.p2}}</p>
      <p>{{model.trail.p3}}</p>
      <p>{{model.trail.p4}}</p>
  {{/c-section}}


  {{#c-section 
      classNames="c-section--background-contain c-section--background-right-top"
      backgroundimage="img_portrait_xploreparadise_livingstone.jpg"
      isInProgress=true
      isConstrained=false
  }}
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
          </div>
          <h2>{{model.explorer.h2}}</h2>
          <h3>{{model.explorer.h3}}</h3>
        </div>
        <div class="col-sm-7"> 
          <p>{{model.explorer.p1}}</p>
          <p>{{model.explorer.p2}}</p>
          <p>{{model.explorer.p3}}</p>
          <p>{{model.explorer.p4}}</p>
        </div>
      </div>
    </div>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
      <h2>{{model.kalahari.title}}</h2>
      {{c-separator}}
      <p>{{model.kalahari.p1}}</p>
  {{/c-section}}

  {{#c-section
    classNames="c-section--background-center-top c-section--background-cover"
    backgroundimage="img_desert_xploreparadise_kalahari_botswana_plants.jpg"
    isConstrainedInside="true"
  }}
    {{c-quotation
      quotationTexts=model.kalahari.quotationTexts
      author=model.kalahari.author 
      authorDescription=model.kalahari.authorDescription
    }}
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <p>{{model.kalahariGeographics.p1}}</p>
    <p>{{model.kalahariGeographics.p2}}</p>
    {{c-image
      src="img_african_symbol.png"
      is2x=true
    }}
  {{/c-section}}

  {{c-separator isBig=true}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
      <h2>{{model.work.title}}</h2>
      <p>{{model.work.p1}}</p>
      <p>{{model.work.p2}}</p>
      <p>{{model.work.p3}}</p>
  {{/c-section}}

  {{#c-section isConstrained=true isInProgress=true}}
    <div class="row">
      
      {{#each model.videoTeasers as |video|}}
        {{c-video-teaser 
          youtubeId = video.youtubeId
          showVideo = (action "openYouTubeModal")
          backgroundimage = video.backgroundimage
          classNames="col-xs-6 col-sm-6 col-md-3" 
          title = video.title
          subtitle = video.subtitle
        }}
      {{/each}}
      
    </div>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <div class="row">
      <h2>Photos</h2>
      {{#photo-swipe items=model.mainGallery.items as |img|}}
        <img 
          width=200 
          class="col-xs-4 col-sm-3 col-md-2 col-lg-2 spacing-vertical--grid-gutter" 
          src={{img.msrc}} 
          alt={{img.title}}
        />
      {{/photo-swipe}}
    </div>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <h2>{{model.about.h2}}</h2>
    <h3>{{model.about.h3}}</h3>
    <p>{{model.about.p1}}</p>
  {{/c-section}}
    
  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <p>{{model.about.p2}}</p>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <h2>GET IN TOUCH</h2>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <h2>SOCIAL MEDIA</h2>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <h2>{{model.thanks.h2}}</h2>
    <p>{{model.thanks.p1}}</p>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <h2>{{model.equipment.h2}}</h2>
    <p>{{model.equipment.p1}}</p>
  {{/c-section}}
  
  <footer>
  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <p>{{model.copyright.p1}}</p>
  {{/c-section}}
  </footer>

{{/l-default}}