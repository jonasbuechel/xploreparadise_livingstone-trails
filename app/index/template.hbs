{{#l-default}}

  {{modal-video
    classNames = "c-ember-cli-video-modal"
    showVideoModal = showVideoModal  
    videoId = videoId
  }}

  {{#c-video classNames="c-video--fullpage"}}
    {{ember-youtube
      ytid="V2VkGY-DMKE"
      playerVars=youtubeIntroPlayerVars
      showDebug=false
      showControls=false
      showProgress=false
    }}
  {{/c-video}}

  {{c-separator isBig=true isDark=true}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
      <h2>{{model.textContent.trail.h2}}</h2>
      {{c-separator}}
      {{c-text-blocks text=model.textContent.trail.text}}
  {{/c-section}}


  {{#c-section 
      classNames="c-section--background-contain c-section--background-right-top"
      backgroundimage="img_portrait_xploreparadise_livingstone.jpg"
      isInProgress=true
      isConstrained=false
  }}
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
          </div>
          <h2>{{model.textContent.explorer.h2}}</h2>
          <h3>{{model.textContent.explorer.h3}}</h3>
        </div>
        <div class="col-sm-7"> 
          {{c-text-blocks text=model.textContent.explorer.text}}
        </div>
      </div>
    </div>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
      <h2>{{model.textContent.kalahari.h2}}</h2>
      {{c-separator}}
      {{c-text-blocks text=model.textContent.kalahari.text}}
  {{/c-section}}

  {{#c-section
    classNames="c-section--background-center-top c-section--background-cover"
    backgroundimage="img_desert_xploreparadise_kalahari_botswana_plants.jpg"
    isConstrainedInside="true"
  }}
    {{c-quotation
      quotationTexts=model.textContent.kalahari.quotationTexts
      author=model.textContent.kalahari.author 
      authorDescription=model.textContent.kalahari.authorDescription
    }}
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    {{c-text-blocks text=model.textContent.kalahariGeographics.text}}
    {{c-image
      src="img_african_symbol.png"
      is2x=true
    }}
  {{/c-section}}

  {{c-separator isBig=true}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
      <h2>{{model.textContent.work.h2}}</h2>
      {{c-text-blocks text=model.textContent.work.text}}
  {{/c-section}}

  {{#c-section isConstrained=true isInProgress=true}}
    <div class="row">
      
      {{#each model.videoTeasers as |video|}}
        {{c-video-teaser 
          youtubeId = video.youtubeId
          showVideo = (action "openYouTubeModal")
          backgroundimage = video.backgroundimage
          classNames="col-xs-6 col-sm-6 col-md-3" 
          title = video.title
          subtitle = video.subtitle
        }}
      {{/each}}
      
    </div>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <div class="row">
      <h2>Photos</h2>
      {{#photo-swipe items=model.mainGallery.items as |img|}}
        <img 
          width=200 
          class="col-xs-4 col-sm-3 col-md-2 col-lg-2 spacing-vertical--grid-gutter" 
          src={{img.msrc}} 
          alt={{img.title}}
        />
      {{/photo-swipe}}
    </div>
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <h2>{{model.textContent.about.h2}}</h2>
    <h3>{{model.textContent.about.h3}}</h3>
    {{c-text-blocks text=model.textContent.about.text}}
  {{/c-section}}
    
  {{#c-section 
      classNames="c-section--text-center c-section--background-cover c-section--background-center-top"
      backgroundimage="img_portrait_xploreparadise_christoph_taenzer.jpg"
      isInProgress=true
      isConstrained=false
  }}
    <div class="container spacing-vertical--8lines">
      <div class="row">
        <p 
           class="c-typography--italic col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-8">
          {{model.about.p2}}
        </p>
      </div>
    </div>
  {{/c-section}}

  {{#c-section 
      isInProgress=true
      isConstrained=true
  }}
     {{c-contact-form}}
  {{/c-section}}

  {{#c-section 
    isConstrainedInside=true 
    classNames="c-section--background-cover c-section--background-center-top c-section--text-center spacing--min-height-100vh c-alignement--center-center"
    backgroundimage="img_contact_xploreparadise_gemsbok_kalahari_botswana_livingstone.jpg"
  }}
    {{c-social-media-connections}}
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true}}
    {{c-special-thanks model=model}}
  {{/c-section}}

  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
    <h2>{{model.textContent.equipment.h2}}</h2>
    {{c-text-blocks text=model.textContent.equipment.text}}
  {{/c-section}}
  
  <footer>
  {{#c-section classNames="c-section--text-center" isConstrained=true isInProgress=true}}
     {{c-text-blocks text=model.textContent.copyright.text}}
  {{/c-section}}
  </footer>

{{/l-default}}